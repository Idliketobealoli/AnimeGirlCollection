<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Settings" android:padding="20dp">

    <TextView
            android:text="Night mode:"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tvNightMode"
            app:layout_constraintTop_toTopOf="@+id/switchDarkMode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/switchDarkMode"
            app:layout_constraintEnd_toStartOf="@+id/switchDarkMode" android:layout_marginEnd="30dp"
            android:textSize="16sp"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/switchDarkMode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Show preview image:"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tvShowPreviewImage"
            app:layout_constraintEnd_toEndOf="@+id/tvNightMode"
            app:layout_constraintStart_toStartOf="@+id/tvNightMode"
            app:layout_constraintTop_toTopOf="@+id/switchShowPreviewImage"
            app:layout_constraintBottom_toBottomOf="@+id/switchShowPreviewImage" android:textSize="16sp"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/switchShowPreviewImage"
            app:layout_constraintTop_toBottomOf="@+id/switchDarkMode" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>
    <Button
            android:text="Switch account"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonSwitchAccount"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>