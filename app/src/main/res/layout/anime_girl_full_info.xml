<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:padding="10dp">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/ivGirlFI"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tvNameFI" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivGirlFI" app:layout_constraintTop_toTopOf="@+id/ivGirlFI"
            android:layout_marginStart="15dp" android:layout_marginEnd="5dp" android:textSize="24sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tvAnimeFI"
            app:layout_constraintStart_toStartOf="@+id/tvNameFI" app:layout_constraintTop_toBottomOf="@+id/tvNameFI"
            app:layout_constraintEnd_toEndOf="@+id/tvNameFI" android:layout_marginTop="10dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tvAgeFI"
            app:layout_constraintEnd_toEndOf="@+id/tvAnimeFI" app:layout_constraintTop_toBottomOf="@+id/tvAnimeFI"
            app:layout_constraintStart_toStartOf="@+id/tvAnimeFI" android:layout_marginTop="20dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tvStatusFI"
            app:layout_constraintStart_toStartOf="@+id/tvAgeFI" app:layout_constraintTop_toBottomOf="@+id/tvAgeFI"
            android:layout_marginTop="10dp" app:layout_constraintEnd_toEndOf="@+id/tvAgeFI"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/ivGirlFI"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="15dp" android:id="@+id/scrollViewFI"
            app:layout_constraintBottom_toTopOf="@+id/buttonMarkFavouriteFI" android:layout_marginBottom="15dp">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvDescriptionFI"/>
    </ScrollView>
    <Button
            android:text="Mark as favourite"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonMarkFavouriteFI"
            app:layout_constraintStart_toStartOf="@+id/ivGirlFI" app:layout_constraintEnd_toEndOf="@+id/tvAnimeFI"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>