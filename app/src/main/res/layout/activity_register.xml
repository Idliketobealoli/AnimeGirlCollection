<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity"
        android:paddingTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

    <TextView
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvLoginText"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="34sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Username:"
            android:ems="10"
            android:id="@+id/editTextUsernameOrEmailLogin" app:layout_constraintTop_toBottomOf="@+id/tvLoginText"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="E-mail:"
            android:ems="10"
            android:id="@+id/editTextEmailRegister"
            app:layout_constraintStart_toStartOf="@+id/editTextUsernameOrEmailLogin"
            app:layout_constraintEnd_toEndOf="@+id/editTextUsernameOrEmailLogin"
            app:layout_constraintTop_toBottomOf="@+id/editTextUsernameOrEmailLogin" android:layout_marginTop="15dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password:"
            android:ems="10"
            android:id="@+id/editTextPasswordRegister" app:layout_constraintTop_toBottomOf="@+id/editTextEmailRegister"
            android:layout_marginTop="15dp" app:layout_constraintStart_toStartOf="@+id/editTextEmailRegister"
            app:layout_constraintEnd_toEndOf="@+id/editTextEmailRegister"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Repeat password:"
            android:ems="10"
            android:id="@+id/editTextRepeatPasswordRegister" app:layout_constraintTop_toBottomOf="@+id/editTextPasswordRegister"
            app:layout_constraintStart_toStartOf="@+id/editTextPasswordRegister"
            app:layout_constraintEnd_toEndOf="@+id/editTextPasswordRegister" android:layout_marginTop="15dp"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonGoRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextRepeatPasswordRegister" android:layout_marginTop="100dp"
    />
    <Button
            android:text="Finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonSubmitRegister"
            app:layout_constraintTop_toTopOf="@+id/buttonGoRegister" app:layout_constraintEnd_toEndOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>